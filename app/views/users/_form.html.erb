<div class="columns", style="padding-top: 5 px;">
  <div class="column is-one-third">
    <div class="level">
      <div class="level-item has-text-centred">
        <%= form_for @user do |f| %>
          <div class="field">
            <%= f.label :first_name, class:"label" %>
            <div class="control">
              <%= f.text_field :first_name, class:"input", placeholder:"First Name" %>
            </div>
          </div>
          <div class="field">
            <%= f.label :last_name, class:"label" %>
            <div class="control">
              <%= f.text_field :last_name, class:"input", placeholder:"Last Name" %>
            </div>
          </div>
          <div class="field">
            <%= f.label :username, class:"label" %>
            <div class="control has-icons-left">
              <%= f.text_field :username, class:"input", placeholder:"username" %>
              <span class="icon is-small is-left">
                <i class="fas fa-user"></i>
              </span>
            </div>
          </div>
          <div class="field">
            <%= f.label :email, class:"label" %>
            <div class="control has-icons-left">
              <%= f.email_field :email, class:"input", placeholder:"Email" %>
              <span class="icon is-small is-left">
                <i class="fas fa-envelope"></i>
              </span>
            </div>
          </div>
          <div class="field">
            <%= f.label :password, class:"label" %>
            <div class="control has-icons-left">
              <%= f.password_field :password, class:"input", placeholder:"Password", :autocomplete => :off %>
              <span class="icon is-small is-left">
                <i class="fas fa-lock"></i>
              </span>
            </div>
          </div>
          <div class="field">
            <%= f.label :password_confirmation, class:"label" %>
            <div class="control has-icons-left">
              <%= f.password_field :password_confirmation, class:"input", placeholder:"Confirm Password" %>
              <span class="icon is-small is-left">
                <i class="fas fa-lock"></i>
              </span>
            </div>
          </div>
          <div class="field is-grouped">
            <div class="control">
              <%= f.submit @submit_button_text, class:'button' %>
            </div>
            <div class="control">
              <%= link_to @cancel_button_text, @cancel_path, class:'button' %>
            </div>
            <% if @allow_delete %>
              <div class="control">
                <%= link_to "Delete Account", settings_path(confirm_delete: true), class:'button is-danger is-outlined' %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <% if @confirm_delete %>
    <div class="column is-2">
    </div>
    
    <div class="column is-one-third">
      <br/><br/><br/>
      <div class="level-item has-text-centred">
        <div class='notification is-danger'>
          <p class='subtitle has-text-centered'>
            Are you sure you want to delete this account?
          </p>
          <p class='subtitle has-text-centered'>
            All of your activity will be deleted, including all Haiku, comments, and likes.
          </p>
          <p class='subtitle has-text-centered'>
            You will not be able to undo this action.
          </p>
          <br/>
          <div class='field is-grouped is-grouped-centered'>
            <p class='control'>
              <%= button_to "I'm sure, Delete My Account.", @user, :method => :delete, class:'button is-warning' %>
            </p>
            <p class='control'>
              <%= link_to "", @poem %>
            </p>
            <p class='control'>
            <%= link_to "Cancel and Keep My Account", @user, class:'button is-outlined' %>
            </p>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>