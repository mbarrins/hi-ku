<section class="hero is-primary is-bold">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        <%= @poem.title %>
      </h1>
    </div>
  </div>
</section>

<br>



<div class="tile is-ancestor">
  <div class="tile is-4 is-vertical is-parent">
    <div class="tile is-child notification is-warning">
      <p>
        <p><%= @poem.line_1 %><p>
        <p><%= @poem.line_2 %><p>
        <p><%= @poem.line_3 %><p>
    </div>
    <div class="tile is-child notification is-danger">
      <p>by <%= link_to @poem.author.full_name, @poem.author %></p>
      <p>a <%= link_to @poem.genre.name, @poem.genre %> haiku for a
      <%= link_to @poem.mood.name, @poem.mood %> mood</p>
    </div>
  </div>

  <div class="tile is-parent">
    <div class="tile is-child box">
      <p class="title">Other Poems from this Author</p>
            <% @poem.author.poems.each do |poem| %>
              <p><%= link_to poem.title, poem %></p>
              <p> Genre: <%= poem.genre.name%></p>
              <p> Number of likes: <%= poem.likes_count%></p><br>
            <% end %>


    </div>
  </div>
</div>
