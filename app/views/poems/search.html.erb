
<br/><br/>

  <div class="container">
  <div class="level-item has-text-centred">
    <%= form_tag( '/poems', :method => :get ) do %>
    <div class="field">
      <%= label_tag :title, 'Enter words or phrase to search for in the Haiku title', class:'field-label' %>
      <div class="control">
        <%= text_field_tag :title, params[:title], class:'field-body input is-normal' %>
      </div>
    </div>
    <div class="field">
      <%= label_tag :body, 'Enter words or phrase to search for in the Haiku body', class:'field-label' %>
      <div class="control">
        <%= text_field_tag :body, params[:body], class:'field-body input is-normal' %>
      </div>
    </div>
    <div class="field">
      <div class="control">
        <div class="select">
          <%= select_tag :genre_id, options_from_collection_for_select(@genres, :id, :name, params[:genre_id]), prompt:'Select Genre' %>
        </div>
      </div>
    </div>
    <div class="field">
      <div class="control">
        <div class="select">
          <%= select_tag :mood_id, options_from_collection_for_select(@moods, :id, :name, params[:mood_id]), prompt:'Select Mood' %>
        </div>
      </div>
    </div>
    <div class="control">
      <%= submit_tag 'Search', name: nil, class:'button is-link' %>
    </div>
  </div>
    <% end %>
  </div>
</div>
