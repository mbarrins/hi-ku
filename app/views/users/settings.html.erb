<%= render 'users/form' %>
<div class='columns'>
<% if @confirm_delete %>
    <div class="column is-2">
    </div>
    <div class="column is-2">
    <br/><br/>
      <div class="level">
        <div class="level-item has-text-centred">
          <div class='notification is-danger'>
            <p class='subtitle has-text-centered'>
              Are you sure you want to delete this account?
            </p>
            <p class='subtitle has-text-centered'>
              All of your activity will be deleted, including all Haiku, comments, and likes.
            </p>
            <p class='subtitle has-text-centered'>
              You will not be able to undo this action.
            </p>
            <br/>
            <div class='field is-grouped is-grouped-centered'>
              <p class='control'>
                <%= button_to "I'm sure, Delete My Account.", @user, :method => :delete, class:'button is-warning' %>
              </p>
              <p class='control'>
                <%= link_to "", @poem %>
              </p>
              <p class='control'>
              <%= link_to "Cancel and Keep My Account", @user, class:'button is-outlined' %>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>