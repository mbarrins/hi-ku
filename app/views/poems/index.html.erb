<section class="hero is-primary is-bold">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        All Poems
      </h1>
    </div>
  </div>
</section>
<br/>
<% if @searched %>
  <section class="columns">
    <div class="column is-one-third">
      <%= form_tag( '/poems', :method => :get ) do %>
        <p class='subtitle' >Filter Search Results for Haiku</p>
        <div class="field">
          <%= label_tag :title, 'Haiku Title Search', class:'field-label' %>
          <div class="control">
            <%= text_field_tag :title, params[:title], class:'field-body input is-normal' %>
          </div>
        </div>
        <div class="field">
          <%= label_tag :body, 'Haiku Body Search', class:'field-label' %>
          <div class="control">
            <%= text_field_tag :body, params[:body], class:'field-body input is-normal' %>
          </div>
        </div>
        <div class="field">
            <div class="control is-expanded">
              <div class="select">
                <%= select_tag :genre_id, options_from_collection_for_select(@genres, :id, :name, params[:genre_id]), prompt:'Select Genre' %>
              </div>
          </div>
        </div>
        <div class="field">
          <div class="control is-expanded">
            <div class="select">
              <%= select_tag :mood_id, options_from_collection_for_select(@moods, :id, :name, params[:mood_id]), prompt:'Select Mood' %>
            </div>
          </div>
        </div>
        <div class="field is-grouped">
          <div class="control">
            <%= submit_tag "Filter Haiku", class:'button is-link' %>
          </div>
          <div class="control">
            <%= submit_tag "Clear Search", class:'button is-link' %>
          </div>
        </div>
      <% end %>
    </div>
  </section>
<% end %>

<%= render 'poems/each_poem' %>